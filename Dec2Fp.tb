`timescale 1ns / 1ns

module tb;

    reg [11:0] dec;
    wire sign;
    wire [2:0] exp;
    wire [3:0] mant;
    
    Dec2FpTop UUT(dec, sign, exp, mant);
    
    initial begin
        #1000;
        dec = 0'b000000000000;
        #1000;
        $display("%012b to S = %01b, E = %03b, M = %04b" , dec, sign, exp, mant);
    end

endmodule